{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es2019",
            "dom"
        ],
        "jsx": "react",
        "rootDirs": [
            "src",
            "stories"
        ],
        "baseUrl": "src",
        "paths": {
            "Diez/*": [
                "../diez/thisbounty-styles/design-language/build/diez-thisbounty-styles-web/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./custom_typings"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "design",
    ]
}